<div class="container mt-5 receipt-container">
  <div class="receipt-card">
    <div class="receipt-card-body">
      <%= image_tag 'logo.png', width: '200px', class: 'img-fluid mx-auto d-block' %>
      <h5 class="receipt-title text-center">Payment Receipt</h5>
      <p class="receipt-subtitle text-center">
        Thank you <%= @purchase.first_name %> <%= @purchase.last_name %> for your purchase! Your payment was successful.
      </p>

      <div class="receipt-details">
        <p><strong>Payment ID:</strong> <%= @payment_intent.id %></p>
        <p><strong>Amount Paid:</strong> $<%= sprintf('%.2f', @payment_intent.amount / 100.0) %></p>
        <p><strong>Status:</strong> <%= @payment_intent.status.capitalize %></p>
      </div>

      <div class="receipt-footer text-center">
        <p class="font-italic">Please print and keep this receipt for your records.</p>
        <div class="actions">
          <button class="secondary-button" onclick="window.print();">
            <i class="fas fa-print"></i> Print Receipt
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
