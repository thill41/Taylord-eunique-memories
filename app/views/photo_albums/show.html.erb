<% content_for :title, "#{t('app.title')} #{@photo_album.title}" %>

<main class="container-fluid photos">
  <h1 class="text-center"><%= @photo_album.title %> Photos</h1>
  
  <div class="admin-actions">
    <%= link_to 'Back to Listing', photo_albums_path(@photo_album) %>
    <%= link_to 'Edit Gallery', edit_photo_album_path(@photo_album) if policy(@photo_album).edit? %>
    <%= link_to 'Manage Photos', photo_album_photos_path(@photo_album) if policy(@photo_album).edit? %>
    <%= link_to 'Add Photo', new_photo_album_photo_path(@photo_album) if policy(Photo).create? %>
  </div>
  
  <%= no_photos_message(@photo_album) %>

 <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4">
    <% @photo_album.photos.each do |photo| %>
      <%= render photo %>
    <% end %>
  </div>

  <turbo-frame id="lightbox"></turbo-frame>
</main>