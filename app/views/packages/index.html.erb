<main class="container-fluid package">
  <h1 class="text-center">Package List</h1>

  <table class="package-list">
    <thead>
      <tr class="text-center">
        <th>Name</th>
        <th>Price</th>
        <th>Enabled</th>
        <th>
          <div class="admin-actions">
            <%= link_to :New, new_package_path %>
          </div>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @packages.each do |package| %>
        <tr>
          <td><%= package.name %></td>
          <td><%= package.price %></td>
          <td><%= package.enabled ? 'Yes' : 'No' %></td>
          <td>
            <div class="admin-actions">
              <%= link_to :Edit, edit_package_path(package), class: 'primary-button' %>
              <%= button_to "Delete", package, method: :delete, data: { turbo_confirm: t("destroy.confirm") }, class: "button-link" %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>  
</main>
