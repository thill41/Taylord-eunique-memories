<turbo-frame id="lightbox">
  <div class="lightbox-overlay">
    <div class="lightbox-close">
      <%= link_to "Ã—", photo_album_path(@photo_album), class: "close-button" %>
    </div>

    <div class="lightbox-content">
      <div class="lightbox-navigation">
        <% if @previous_photo %>
          <%= link_to "<", photo_album_photo_path(@photo_album, @previous_photo), data: { turbo_frame: "lightbox" }, class: "nav-arrow left-arrow" %>
        <% else %>
          <span class="nav-arrow-placeholder"></span>
        <% end %>

        <%= image_tag @photo.image, class: "full-size-photo" %>

        <% if @next_photo %>
          <%= link_to ">", photo_album_photo_path(@photo_album, @next_photo), data: { turbo_frame: "lightbox" }, class: "nav-arrow right-arrow" %>
        <% else %>
          <span class="nav-arrow-placeholder"></span>
        <% end %>
      </div>

      <div class="lightbox-actions">
        <%#= link_to "Download", download_photo_path(@photo), class: "action-button" %>
        <%#= link_to "Share", "#", class: "action-button" %>
      </div>
    </div>
  </div>
</turbo-frame>

























<div class="container-fluid">
  <div class="w-75 p-3 mx-auto">
    <div class="row mb-4">
      <div class="col-12 text-center">
        <h2 class="mb-4">Photo from <%#= @photo_album.title %></h2>
        <div class="photo-image">
          <%#= image_tag @photo.image, class: 'img-fluid img-thumbnail', alt: @photo.description %>
        </div>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-12 text-center">
        <h4>Description</h4>
        <div>
          <p><%#= @photo.description %></p>
        </div>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-12 text-center">
        <h4>Cover Photo Status</h4>
        <div>
          <p><%#= @photo.cover_photo ? 'This is the cover photo' : 'Not the cover photo' %></p>
        </div>
      </div>
    </div>

    <div class="actions">
      <%#= button_to "Delete", photo_album_photo_path(@photo_album, @photo), method: :delete, class: "secondary-button", data: { turbo_confirm: "Are you sure you? This can't be undone!"} %>
      <%#= link_to "Edit", edit_photo_album_photo_path(@photo_album, @photo), class: 'primary-button' %>
    </div>
  </div>
</div>
