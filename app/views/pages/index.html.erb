<main class="container-fluid homepage">
  <section class="hero">
    <div class="hero-image">
      <div class="hero-content">
        <h1>Your Hero Image with Example Text</h1>
      </div>
    </div>
  </section>

  <section class="slogan">
    <h2>Our Mission: Delivering Excellence Every Day</h2>
    <p>Stuff about the company goes here</p>
  </section>

  <section>
    <h3 class="text-center">Packages</h3>

    <div class="admin-actions">
      <%= link_to :Manage, packages_path if policy(Package).update?%>
    </div>
    
    <div class="packages-container">
      <%= render @packages %>
    </div>
  </section>

  <section>
    <h3 class="text-center">Gallery</h3>

    <div class="admin-actions">
      <%= link_to :Manage, photo_albums_path if user_signed_in? %>
    </div>
    
    <div class="photo-albums">
      <% @photo_albums.in_groups_of(3, nil).each do |group| %>
        <div class="row-container">
          <% group.each do |photo_album| %>
            <%= render partial: 'photo_albums/photo_album', locals: { photo_album: photo_album } if photo_album%>
          <% end %>
        </div>
      <% end %>
    </div>
  </section>

  <section>
    <div class="button-container">
      <%= link_to 'Contact Now', new_contact_path, class: "button contact-btn" %>
      <!-- <a href="#buy-now" class="button buy-btn">Buy Now</a> -->
    </div>
  </section>
</main>
